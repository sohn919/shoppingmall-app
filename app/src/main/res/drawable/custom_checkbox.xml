<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/unchecked_box" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/checked_box" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </layer-list>
    </item>
</selector>